<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver | Choose a destination</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f1f1f1;
        }
        
        .confirm-order {
            text-align: center;
            display: block;
            margin-top: 20px;
            color: #013A81;
        }
        
        .content-wrapper {
            background-color: #013A81;
            border-radius: 0.5em;
            width: 100%;
            padding: 10px 20px;
        }
        
        .bottom-text {
            text-align: center;
            display: block;
            margin-top: 20px;
            color: #013A81;
        }
        
        .main-container {
            display: flex;
            align-items: flex-start;
            /* Align items at the top */
            padding: 20px;
            /* Add padding around the main container */
        }
        
        .centered-content {
            flex: 1;
            /* Allows the image container to take up available space */
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .container img {
            max-width: 70%;
            height: auto;
        }
        
        .dropdown-container {
            margin-left: 10px;
            /* Add spacing between the content and dropdown */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .bottom-text {
            position: fixed;
            bottom: 20px;
            width: 100%;
            text-align: right;
            padding-right: 30px;
            padding-bottom: 100px;
        }
        
        .yellow-button {
            background-color: #F2A51F;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        
        .yellow-button:hover {
            background-color: #f5bf62;
        }
        
        .btn-custom {
            background-color: #F2A51F;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }
        
        .btn-custom:hover {
            background-color: #f5bf62;
        }
        
        @media (max-width: 768px) {
            .table-container {
                padding: 10px;
            }
            .yellow-button {
                width: 100%;
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
</head>

<body>
    <div class="content-wrapper">
        <header class="d-flex flex-wrap justify-content-center py-1 mb-1">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href=""></use></svg>
                <span class="fs-4 order-heading" style="color: white;"> Choose a destination</span>
            </a>
        </header>
    </div>

    <div class="row">
        <div class="col-9">
            <div class="centered-content">
                <div class="container d-flex align-items-center justify-content-center mb-4 mt-4">
                    <img src="/images/image_99.png" alt="A detailed map showing various locations" class="img-fluid w-100" style="max-width: 1600px;">


                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="dropdown-container pe-5">
                <!-- Dropdown Menu -->
                <div class="dropdown">
                    <form action="/driver/select-building" method="POST" id="buildingForm">
                        <input type="hidden" name="destination" id="destinationInput">
                        <!-- Will hold the selected destination -->
                        <input type="hidden" name="start" id="startInput">
                        <!-- Will hold the selected starting point -->
                        <input type="hidden" name="routeName" id="routeNameInput">
                        <!-- Will hold the route name -->
                        <input type="hidden" name="_id" id="_idInput">
                        <!-- Will hold the ID-->
                        <input type="hidden" name="status" id="statusInput">
                        <!-- Will hold the status-->

                        <!-- Row for selecting the destination -->
                        <div class="mb-3 row">
                            <!-- Bootstrap margin-bottom utility (mb-3) for spacing -->
                            <label for="destinationInput" class="col-form-label col-12">Select Starting Point</label>
                            <div class="col-12">
                                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="startDropdown" data-bs-toggle="dropdown" aria-expanded="false">Select Starting Point</button>
                                <ul class="dropdown-menu w-100" aria-labelledby="startDropdown">
                                    <li><a class="dropdown-item" data-value="A">Building A</a></li>
                                    <li><a class="dropdown-item" data-value="B">Building B</a></li>
                                    <li><a class="dropdown-item" data-value="C">Building C</a></li>
                                    <li><a class="dropdown-item" data-value="D">Building D</a></li>
                                    <li><a class="dropdown-item" data-value="E">Building E</a></li>
                                    <li><a class="dropdown-item" data-value="F">Building F</a></li>
                                    <li><a class="dropdown-item" data-value="G">Building G</a></li>
                                    <li><a class="dropdown-item" data-value="H">Building H</a></li>
                                    <li><a class="dropdown-item" data-value="I">Building I</a></li>
                                    <li><a class="dropdown-item" data-value="J">Building J</a></li>
                                    <li><a class="dropdown-item" data-value="K">Building K</a></li>
                                </ul>

                            </div>
                        </div>

                        <!-- Row for selecting the starting point -->
                        <div class="mb-3 row">
                            <label for="startInput" class="col-form-label col-12">Select Destination</label>
                            <div class="col-12">

                                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="destinationDropdown" data-bs-toggle="dropdown" aria-expanded="false">Select Destination </button>
                                <ul class="dropdown-menu w-100" aria-labelledby="destinationDropdown">
                                    <li><a class="dropdown-item" data-value="A">Building A</a></li>
                                    <li><a class="dropdown-item" data-value="B">Building B</a></li>
                                    <li><a class="dropdown-item" data-value="C">Building C</a></li>
                                    <li><a class="dropdown-item" data-value="D">Building D</a></li>
                                    <li><a class="dropdown-item" data-value="E">Building E</a></li>
                                    <li><a class="dropdown-item" data-value="F">Building F</a></li>
                                    <li><a class="dropdown-item" data-value="G">Building G</a></li>
                                    <li><a class="dropdown-item" data-value="H">Building H</a></li>
                                    <li><a class="dropdown-item" data-value="I">Building I</a></li>
                                    <li><a class="dropdown-item" data-value="J">Building J</a></li>
                                    <li><a class="dropdown-item" data-value="K">Building K</a></li>
                                </ul>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="submitbtn btn btn-custom w-100">Confirm</button>
                            </div>
                        </div>
                    </form>

                    <script>
                        // JavaScript to handle dropdown selection

                        document.querySelectorAll('.dropdown-item').forEach(item => {
                            item.addEventListener('click', function(event) {
                                event.preventDefault();
                                const value = this.getAttribute('data-value');

                                // Determine whether the user is selecting a starting point or a destination
                                if (this.closest('ul').getAttribute('aria-labelledby') === 'startDropdown') {
                                    document.getElementById('startInput').value = value;
                                    document.getElementById('startDropdown').innerText = this.innerText;
                                } else {
                                    document.getElementById('destinationInput').value = value;
                                    document.getElementById('destinationDropdown').innerText = this.innerText;
                                }

                                // Automatically generate routeName when both start and destination are selected
                                const start = document.getElementById('startInput').value;
                                const destination = document.getElementById('destinationInput').value;
                                const status = "$"
                                if (start && destination) {
                                    document.getElementById('routeNameInput').value = `${start}_to_${destination}`;
                                }
                            });
                        });

                        // Generate rideID and status before form submission
                        document.querySelector('.submitbtn').addEventListener('click', function(event) {
                            // Generate a unique ride ID (can use a UUID generator in real use cases)
                            const _id = 'ride-' + Math.floor(Math.random() * 1000000);
                            document.getElementById('_idInput').value = _id;

                            // Set status to 'ordering'
                            document.getElementById('statusInput').value = 'ordering';
                        });
                    </script>

                </div>
            </div>
        </div>
    </div>
    </div>

</body>

</html>